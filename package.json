{
    "name": "rx-mqtt-client",
    "version": "0.0.0-alpha.1",
    "description": "",
    "keywords": [],
    "main": "dist/rx-mqtt-client.umd.js",
    "module": "dist/rx-mqtt-client.es5.js",
    "typings": "dist/types/rx-mqtt-client.d.ts",
    "files": [
        "dist"
    ],
    "author": "St√©phane LEONARD <stephane.leonard.dev@gmail.com>",
    "repository": {
        "type": "git",
        "url": ""
    },
    "license": "MIT",
    "engines": {
        "node": ">=6.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
        "prebuild": "rimraf dist",
        "coverage": "npm run test:unit && npm run coverage:integration",
        "coverage:unit": "nyc --reporter lcov npm test",
        "coverage:integration": "nyc --reporter lcov --no-clean npm run test:integration",
        "build": "npm run build:src && rollup -c rollup.config.ts && npm run build:doc",
        "build:spec": "tsc -p ./tsconfig.spec.json",
        "build:src": "tsc",
        "build:doc": " npm run build:typedoc && npm run build:codesample",
        "build:typedoc": " typedoc --options ./typedoc.json src",
        "build:codesample": "tsc --noEmit -p ./docs/tsconfig.json && md-magic --path README.md",
        "start": "rollup -c rollup.config.ts -w",
        "test": "mocha --recursive ./src/**/*.spec.ts",
        "test:integration": "mocha --recursive ./test/integration/**/*.spec.ts ",
        "test:prod": "tslint --version && tsc --version && npm run lint && nyc --reporter lcov npm test -- --no-cache && nyc --reporter lcov --no-clean npm run test:integration -- --no-cache",
        "deploy-docs": "ts-node tools/gh-pages-publish",
        "report-coverage": "nyc report --reporter=text-lcov | coveralls",
        "commit": "git-cz",
        "semantic-release": "semantic-release",
        "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
        "precommit": "lint-staged",
        "travis-deploy-once": "travis-deploy-once",
        "startbroker": "docker-compose -f test/docker up"
    },
    "lint-staged": {
        "{src,test}/**/*.ts": [
            "prettier --write",
            "git add"
        ]
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        }
    },
    "prettier": {
        "semi": false,
        "singleQuote": true
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^7.1.2",
        "@commitlint/config-conventional": "^7.1.2",
        "@types/chai": "^4.1.7",
        "@types/chai-as-promised": "^7.1.0",
        "@types/expect": "^1.20.3",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.11.0",
        "@types/uniqid": "^4.1.3",
        "chai": "^4.1.0",
        "chai-as-promised": "^7.1.1",
        "colors": "^1.3.2",
        "commitizen": "^3.0.0",
        "coveralls": "^3.0.2",
        "cross-env": "^5.2.0",
        "cz-conventional-changelog": "^2.1.0",
        "debug": "^4.1.1",
        "husky": "^1.0.1",
        "lint-staged": "^8.0.0",
        "lodash.camelcase": "^4.3.0",
        "markdown-magic": "^1.0.0",
        "mocha": "^6.0.2",
        "mochawesome": "^3.1.1",
        "mqtt-server": "^0.1.0",
        "nyc": "^13.2.0",
        "prettier": "^1.14.3",
        "prompt": "^1.0.0",
        "replace-in-file": "^3.4.2",
        "rimraf": "^2.6.2",
        "rollup": "^0.67.0",
        "rollup-plugin-commonjs": "^9.1.8",
        "rollup-plugin-hashbang": "^2.2.2",
        "rollup-plugin-json": "^3.1.0",
        "rollup-plugin-node-resolve": "^3.4.0",
        "rollup-plugin-sourcemaps": "^0.4.2",
        "rollup-plugin-typescript2": "^0.18.0",
        "rxjs": "^6.5.3",
        "semantic-release": "^17.2.3",
        "shelljs": "^0.8.3",
        "travis-deploy-once": "^5.0.9",
        "ts-node": "^8.4.1",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-config-standard": "^8.0.1",
        "typedoc": "^0.15.0",
        "typescript": "^3.5.3",
        "uniqid": "^5.0.3"
    },
    "dependencies": {
        "mqtt": "^3.0.0"
    },
    "nyc": {
        "include": [
            "src/*.ts",
            "src/**/*.ts"
        ],
        "exclude": [
            "src/*.spec.ts",
            "src/**/*.spec.ts",
            "typings",
            "test/typings.d.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [],
        "reporter": [
            "json",
            "html"
        ],
        "all": true,
        "report-dir": "reports/coverage"
    }
}
