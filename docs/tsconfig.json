{
    "compilerOptions": {
        "noEmit": true,
        "moduleResolution": "node",
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "baseUrl": "./",
        "paths": {
            "rx-mqtt-client": [
                "../src/public-api"
            ]
        },
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "dist/types",
        "outDir": "dist/lib",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "samples"
    ]
}